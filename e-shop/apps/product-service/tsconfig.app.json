{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "out-tsc/product-service",
    "types": [
      "node", "express"
    ],
    "rootDir": "../../",
    "tsBuildInfoFile": "out-tsc/product-service.app.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "../../packages/**/*.ts",

    "swagger-output.json",
    "src/swagger.js",
    "src",
    "src/**/*.json"
],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ] 
}
